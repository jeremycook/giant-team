@page
@model WebApp.Pages.Databases.CreateModel
@{
    ViewBag._Title = "Create a Database";
}

<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">
    <div class="mb-3">
        <label asp-for="Model.DatabaseName" class="form-label"></label>
        <input asp-for="Model.DatabaseName" class="form-control" autofocus>
    </div>
    <button class="btn btn-primary">Create It</button>
</form>
