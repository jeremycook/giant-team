@model bool?
@{
    var items = new List<SelectListItem>
    {
        new SelectListItem("Yes", bool.TrueString, Model == true),
        new SelectListItem("No", bool.FalseString, Model == false),
    };
    if (!ViewData.ModelMetadata.IsRequired)
    {
        items.Add(new SelectListItem(string.Empty, "", Model == null));
    }
}
<select asp-for="@Model" asp-items="@items">
</select>